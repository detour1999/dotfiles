// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "autosave": "on_focus_change",
  "languages": {
    "Plain Text": {
      "show_edit_predictions": false
    }
  },
  "theme": {
    "mode": "system",
    "light": "macOS Classic Dark",
    "dark": "macOS Classic Dark"
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2",
    "dock": "bottom"
  },
  "ui_font_size": 16,
  "buffer_font_size": 16.0,
  "format_on_save": "on",
  "soft_wrap": "editor_width",
  "base_keymap": "SublimeText",
  // "ui_font_family": "Consolas for Powerline",
  "buffer_font_family": "Consolas for Powerline",
  "buffer_line_height": { "custom": 1.6 },
  "current_line_highlight": "gutter",
  "selection_highlight": false,
  "indent_guides": {
    "coloring": "indent_aware",
    "background_coloring": "indent_aware"
  },
  "terminal": {
    "font_family": "Consolas for Powerline", //"Consolas",
    "font_size": 18,
    "cell_width": 1.0,
    "line_height": {
      "custom": 1.25
    },
    // "toolbar": {
    //   "breadcrumbs": true
    // },
    "opacity": 1.0, // Ghostty is solid by default
    "padding": {
      "x": 2,
      "y": 2
    },
    "background": "#282a36", // Dracula background
    "foreground": "#f8f8f2", // Dracula foreground
    "colors": {
      "black": "#21222c",
      "red": "#ff5555",
      "green": "#50fa7b",
      "yellow": "#f1fa8c",
      "blue": "#bd93f9",
      "magenta": "#ff79c6",
      "cyan": "#8be9fd",
      "white": "#f8f8f2"
    }
  }
}
