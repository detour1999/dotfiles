[alias]
    co = checkout
    br = branch
    ci = commit
    st = status
    lg = log --oneline --graph --decorate --all
    last = log -1 HEAD
    amend = commit --amend --no-edit
    unstage = reset HEAD --
    undo = reset --soft HEAD~1
    discard = checkout --
    fp = fetch --prune
    prune-remote = fetch --prune origin
    hist = log --pretty=format:"%h %ad | %s%d [%an]" --graph --date=short
